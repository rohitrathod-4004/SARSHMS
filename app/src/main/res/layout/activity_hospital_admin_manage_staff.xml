<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_manage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Staff"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"/>

    <EditText
        android:id="@+id/et_staff_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter staff email"
        android:padding="12dp"/>

    <Button
        android:id="@+id/btn_add_staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Staff"
        android:padding="12dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_remove_staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Selected Staff"
        android:padding="12dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"/>
</LinearLayout>
